{
  "compilerOptions": {
    "strict": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "forceConsistentCasingInFileNames": true,
    // pending https://gitlab.avcd.cz/opendesign/octopus-specs/-/merge_requests/17
    "isolatedModules": false,
    "skipLibCheck": true,
    "lib": ["ES2022"],
    "target": "ES2022",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "composite": true,
    "resolveJsonModule": true
  }
}
