{
  "name": "opendesign",
  "description": "CLI for working with OpenDesign .octopus files",
  "version": "0.2.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "github:opendesigndev/open-design-framework",
    "directory": "packages/opendesign"
  },
  "scripts": {
    "dev:frontend": "vite",
    "dev:cli": "node --no-warnings=ExperimentalWarning --watch --loader @esbuild-kit/esm-loader cli/cli.ts",
    "build:frontend": "vite build",
    "build:cli": "node bundle-cli.js",
    "build": "yarn build:cli && yarn build:frontend",
    "prepublishOnly": "yarn build"
  },
  "bin": "./bin/opendesign.js",
  "dependencies": {
    "@opendesign/engine-wasm": "0.3.1-02dfd1c-20230413"
  },
  "devDependencies": {
    "@esbuild-kit/esm-loader": "^2.5.5",
    "@opendesign/engine": "0.3.1-02dfd1c-20230413",
    "@opendesign/react": "workspace:*",
    "@opendesign/universal": "workspace:*",
    "@types/express": "^4.17.17",
    "@types/file-saver": "^2.0.5",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^2.2.0",
    "autoprefixer": "^10.4.13",
    "builtin-modules": "^3.3.0",
    "chalk": "^5.2.0",
    "esbuild": "^0.17.12",
    "express": "^4.18.2",
    "file-saver": "^2.0.5",
    "nodemon": "^2.0.21",
    "open": "^9.1.0",
    "postcss": "^8.4.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-router-dom": "^6.4.3",
    "tailwindcss": "^3.2.4",
    "vite": "^3.2.4",
    "zod": "^3.21.4"
  },
  "files": [
    "dist/cli",
    "dist/editor",
    "!/dist/**/*.wasm"
  ]
}
