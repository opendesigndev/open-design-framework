{
  "name": "open-design-framework",
  "version": "0.0.0",
  "repository": "github:opendesigndev/open-design-framework",
  "author": "Open Design Contributors",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "packageManager": "yarn@3.3.0+sha256.bbfc6cc3362afbcb0ce39ee8f36fb2b62ce9834b20d6aeee5c1f481269b52238",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "eslint": "eslint --cache",
    "foreachpublic": "yarn workspaces foreach --no-private --from '@opendesign/*'",
    "release": "tsc -b tsconfig-published.json && yarn foreachpublic exec \"rm -rf _release && yarn pack && mkdir _release && tar zxvf package.tgz --directory _release && rm package.tgz\" && changeset publish"
  },
  "devDependencies": {
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "prettier": "^2.8.3",
    "typescript": "^4.9.3"
  },
  "engines": {
    "corepack": ">=0.12.0"
  },
  "dependencies": {
    "@changesets/cli": "^2.25.2"
  }
}
